                    <label for="destination" class="form-label">Where do you want to go?</label>
                    <input type="text" name="destination" class="form-control" required
                        placeholder="e.g., Kashmir, Paris, Tokyo" value="<%= destination || '' %>">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="source" class="form-label">Starting From (Source)</label>
                        <input type="text" name="source" class="form-control" required placeholder="e.g., Delhi, Mumbai"
                            value="<%= source || '' %>">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="transport" class="form-label">Preferred Mode of Transport</label>
                        <select name="transport" class="form-select" required>
                            <option value="Any (Best Option)">Any (Best Option)</option>
                            <option value="Train üöÇ">Train üöÇ</option>
                            <option value="Bus üöå">Bus üöå</option>
                            <option value="Car/Taxi üöñ">Car/Taxi üöñ</option>
                            <option value="Bike üèçÔ∏è">Bike üèçÔ∏è</option>
                            <option value="Flight ‚úàÔ∏è">Flight ‚úàÔ∏è</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="days" class="form-label">Duration (Days)</label>
                        <input type="number" name="days" class="form-control" required min="1" max="30" value="3">
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="budget" class="form-label">Budget (per person)</label>
                        <select name="budget" class="form-select" required>
                            <option value="‚Çπ500 - ‚Çπ2,000 (Day Trip/Pocket Friendly)">‚Çπ500 - ‚Çπ2,000 (Day Trip/Pocket
                                Friendly)</option>
                            <option value="‚Çπ2,000 - ‚Çπ5,000 (Budget Stay)">‚Çπ2,000 - ‚Çπ5,000 (Budget Stay)</option>
                            <option value="‚Çπ5,000 - ‚Çπ10,000 (Standard)" selected>‚Çπ5,000 - ‚Çπ10,000 (Standard)</option>
                            <option value="‚Çπ10,000 - ‚Çπ20,000 (Comfort)">‚Çπ10,000 - ‚Çπ20,000 (Comfort)</option>
                            <option value="‚Çπ20,000 - ‚Çπ50,000 (Premium)">‚Çπ20,000 - ‚Çπ50,000 (Premium)</option>
                            <option value="‚Çπ50,000 - ‚Çπ1,00,000 (Luxury)">‚Çπ50,000 - ‚Çπ1,00,000 (Luxury)</option>
                            <option value="‚Çπ1,00,000+ (Ultra Luxury)">‚Çπ1,00,000+ (Ultra Luxury)</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="interests" class="form-label">Interests & Preferences</label>
                    <input type="text" name="interests" class="form-control" required
                        placeholder="e.g., Adventure, Local Food, Museums, Relaxing">
                </div>

                <button class="btn btn-danger w-100">Generate Itinerary</button>
            </form>

            <% if(plan) { %>
                <hr class="mt-5 mb-5">
                <div class="card shadow-lg border-0 mb-5">
                    <div class="card-header bg-danger text-white">
                        <h4 class="m-0"><i class="fa-solid fa-plane-departure"></i> Your Trip to <%= destination %>
                        </h4>
                    </div>
                    <div class="card-body bg-light">
                        <div class="card-text ai-response">
                            <%- plan %>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <style>
        .ai-response h1,
        .ai-response h2,
        .ai-response h3 {
